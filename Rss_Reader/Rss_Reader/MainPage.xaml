<Page
    x:Class="Rss_Reader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Rss_Reader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBox x:Name="UrlBox" TextWrapping="Wrap" PlaceholderText="RSS URL ..." VerticalAlignment="Top" Margin="10,10,58,0"/>

        <Button x:Name="OkBtn" Content="OK" HorizontalAlignment="Right" Margin="0,10,13,0" VerticalAlignment="Top" Click="OkBtn_Click" Width="40" Background="#FF2D59A4" BorderBrush="#FF2D59A4" Foreground="White"/>

        <ListBox x:Name="listBox" Height="583" VerticalAlignment="Top" Margin="10,47,13,0"/>

    </Grid>
</Page>
